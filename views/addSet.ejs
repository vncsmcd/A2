<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Set</title>
    <link href="/css/main.css" rel="stylesheet">
</head>

<body class="bg-gray-50 text-gray-800">
    <!-- Include the Navbar Partial -->
    <%- include('partials/navbar', { page: '/lego/addSet' }) %>

    <div class="container mx-auto py-8 px-4">

        <!-- Header Section -->
        <header class="text-center mb-8">
            <h1 class="text-5xl font-extrabold text-blue-600 mb-4">Add Set</h1>
            <p class="text-lg text-gray-700">Fill out the form below to add a new Lego set to the collection.</p>
        </header>

        <!-- Add Set Form -->
        <form action="/lego/addSet" method="POST" class="bg-white shadow-lg rounded-lg p-6">
            <!-- Set Name -->
            <div class="form-control mb-4">
                <label for="name" class="label font-semibold text-gray-600">
                    <span class="label-text">Set Name</span>
                </label>
                <input type="text" id="name" name="name" class="input input-bordered w-full bg-white text-gray-800" placeholder="Enter set name" required>
            </div>

            <!-- Year -->
            <div class="form-control mb-4">
                <label for="year" class="label font-semibold text-gray-600">
                    <span class="label-text">Year</span>
                </label>
                <input type="number" id="year" name="year" class="input input-bordered w-full bg-white text-gray-800" placeholder="Enter year" required>
            </div>

            <!-- Number of Parts -->
            <div class="form-control mb-4">
                <label for="num_parts" class="label font-semibold text-gray-600">
                    <span class="label-text">Number of Parts</span>
                </label>
                <input type="number" id="num_parts" name="num_parts" class="input input-bordered w-full bg-white text-gray-800" placeholder="Enter number of parts" required>
            </div>

            <!-- Image URL -->
            <div class="form-control mb-4">
                <label for="img_url" class="label font-semibold text-gray-600">
                    <span class="label-text">Image URL</span>
                </label>
                <input type="url" id="img_url" name="img_url" class="input input-bordered w-full bg-white text-gray-800" placeholder="Enter image URL" required>
            </div>

            <!-- Theme -->
            <div class="form-control mb-4">
                <label for="theme_id" class="label font-semibold text-gray-600">
                    <span class="label-text">Theme</span>
                </label>
                <select id="theme_id" name="theme_id" class="select select-bordered w-full bg-white text-gray-800" required>
                    <% themes.forEach(theme => { %>
                        <option value="<%= theme.id %>"><%= theme.name %></option>
                    <% }) %>
                </select>
            </div>

            <!-- Set Number -->
            <div class="form-control mb-6">
                <label for="set_num" class="label font-semibold text-gray-600">
                    <span class="label-text">Set Number</span>
                </label>
                <input type="text" id="set_num" name="set_num" class="input input-bordered w-full bg-white text-gray-800" placeholder="Enter set number" required>
            </div>

            <!-- Submit Button -->
            <div class="form-control">
                <button type="submit" class="btn btn-primary w-full py-3 text-lg font-medium shadow-md hover:shadow-lg transition">
                    Add Set
                </button>
            </div>
        </form>
    </div>
</body>
</html>
