<div class="navbar bg-gradient-to-r from-yellow-400 via-red-500 to-pink-500 p-4 shadow-lg">
    <!-- Logo -->
    <div class="flex-1">
      <a class="text-white text-3xl font-extrabold" href="/">Lego Collection</a>
    </div>
  
    <!-- Dropdown for Small Screens -->
    <div class="dropdown sm:hidden">
      <label tabindex="0" class="btn btn-ghost text-white">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7" />
        </svg>
      </label>
      <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-white text-gray-800 rounded-box w-52">
        <li><a href="/lego/sets" class="hover:text-yellow-500">View Collection</a></li>
        <li><a href="/about" class="hover:text-yellow-500">About</a></li>
  
        <% if (session.user) { %>
          <li>
            <details>
              <summary class="hover:text-yellow-500">Account: <%= session.user.userName %></summary>
              <ul class="p-2">
                <li><a href="/lego/addSet" class="hover:text-yellow-500">Add to Collection</a></li>
                <li><a href="/userHistory" class="hover:text-yellow-500">User History</a></li>
                <li><a href="/logout" class="hover:text-yellow-500">Log Out</a></li>
              </ul>
            </details>
          </li>
        <% } else { %>
          <li>
            <details>
              <summary class="hover:text-yellow-500">Account</summary>
              <ul class="p-2">
                <li><a href="/login" class="hover:text-yellow-500">Login</a></li>
                <li><a href="/register" class="hover:text-yellow-500">Register</a></li>
              </ul>
            </details>
          </li>
        <% } %>
      </ul>
    </div>
  
    <!-- Navbar for Larger Screens -->
    <div class="navbar-center hidden sm:flex">
      <ul class="menu menu-horizontal px-1 text-white">
        <li><a href="/lego/sets" class="hover:text-yellow-200">View Collection</a></li>
        <li><a href="/about" class="hover:text-yellow-200">About</a></li>
  
        <% if (session.user) { %>
          <li>
            <details>
              <summary class="hover:text-yellow-200">Account: <%= session.user.userName %></summary>
              <ul class="p-2 bg-white text-gray-800 rounded shadow">
                <li><a href="/lego/addSet" class="hover:text-yellow-500">Add to Collection</a></li>
                <li><a href="/userHistory" class="hover:text-yellow-500">User History</a></li>
                <li><a href="/logout" class="hover:text-yellow-500">Log Out</a></li>
              </ul>
            </details>
          </li>
        <% } else { %>
            <li> 
                <details> 
                  <summary>Account</summary> 
                  <ul class="p-2 right-0"> 
                    <li><a class="<%= (page == "/login") ? 'active' : '' %>" href="/login">Login</a></li> 
                    <li><a class="<%= (page == "/register") ? 'active' : '' %>" href="/register">Register</a></li> 
                  </ul> 
                </details> 
              </li> 
        <% } %>
      </ul>
    </div>
  </div>
  